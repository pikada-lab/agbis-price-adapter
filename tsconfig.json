{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "rootDir": "src",
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "example/*"
  ]
}